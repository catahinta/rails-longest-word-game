<div class="container p-3">
  <h1 class="text-center">New game</h1>
  <div class="d-flex justify-content-between">
    <% @letters.each do |letter|%>
      <div class="bg-primary p-3 my-0 mx-2 rounded shadow">
        <h3 class="letter m-0"><%= letter %></h3>
      </div>
    <% end %>
  </div>
  <h4>What is the longest word you can find?</h4>
  <form action="/score" method="post" data-turbo="false" class="d-flex">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input type="text" name="word" class="form-control">
    <input type="submit" class="btn btn-primary">
  </form>
</div>
